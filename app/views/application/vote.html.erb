<div id="results_page">
<h2 id="i_have_envelopes_plz">Pick <br>Nom!</h2>

<% form_tag chad_path(@ppl.verification_code) do |f| %>
  <ul class="votez">
    <%- for nom in @ppl.omnom.noms do -%>
    <li class="result">
      <div class="pick"><label for="nom_id_<%= nom.id %>"><img src="/images/arrow.png" width="59" height="43" alt="Arrow"></label><%= radio_button_tag "nom_id", nom.id %></div>
      <div class="nom"><div class="name"><%=h nom.name %></div>
      <div class="details"><%= nom.details %></div></div>
      <br>
    </li>
    <%- end -%>
  </ul>
  <div id="vote"><%= submit_tag %></div>
<% end %>
